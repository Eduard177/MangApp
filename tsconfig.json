{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "moduleResolution": "bundler",
    "customConditions": ["react-native"],
    "target": "esnext",
    "strict": false,
    "noEmit": true,
    "types": ["nativewind/types", "react-native-svg"]
  },
  "include": ["**/*.ts", "**/*.tsx", "nativewind-env.d.ts", "src", "src/types"],
  "exclude": ["node_modules"]
}
